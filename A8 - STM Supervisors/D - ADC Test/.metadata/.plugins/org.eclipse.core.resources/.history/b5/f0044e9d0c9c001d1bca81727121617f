/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(Status_L2_GPIO_Port, Status_L2_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin : Status_L2_Pin */
  GPIO_InitStruct.Pin = Status_L2_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(Status_L2_GPIO_Port, &GPIO_InitStruct);

}

/* USER CODE BEGIN 4 */
void HAL_CAN_RxFifo0MsgPendingCallback(CAN_HandleTypeDef *hcan)
{
	HAL_CAN_GetRxMessage(&hcan1,CAN_RX_FIFO0, &RxHeader, RxData);

	if (RxHeader.DLC == 8)
	{
		FData.Data[0] = RxData[0];
		FData.Data[1] = RxData[1];
		FData.Data[2] = RxData[2];
		FData.Data[3] = RxData[3];

		float Num1 = FData.Number;

		FData.Data[0] = RxData[4];
		FData.Data[1] = RxData[5];
		FData.Data[2] = RxData[6];
		FData.Data[3] = RxData[7];

		float Num2 = FData.Number;

		char MSG[50], *auxSTR;

		sprintf(MSG,"%f %f\n",Num1,Num2);
		strcpy(auxSTR,MSG);
		HAL_UART_Transmit(&huart1,(uint8_t *)auxSTR,50,1000);
		HAL_CAN_AddTxMessage(&hcan1,&TxHeader,TxData,&MailBox);
		HAL_GPIO_TogglePin(Status_L2_GPIO_Port,Status_L2_Pin);
	}
}
/* USER CODE END 4 */

