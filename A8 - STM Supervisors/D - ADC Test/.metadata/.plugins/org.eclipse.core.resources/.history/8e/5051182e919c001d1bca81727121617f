int bufsize (char *buff)
{
	int i = 0;
	while (*buff++ != '\0') i++;
	return i;
}

void clear_buffer (char* buffer2)
{
	for (int i = 0; i < 1024; i ++)
		buffer2[i] = '\0';
}
